<!doctype html>
<html>
<head>
    <title>Easy Notes</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="text-left">
        <h1>Hello, <%= user.local.email %></h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="page-header text-center">
        <h2>Create a New Note</h2>
        <% if (user.local.email) { %>
          <form action="/notes" method="POST">
            <input type="text" name="userName" value="<%= user.local.email %>" hidden>
            <label for="noteTitle">Create a Title</label>
            <input type="text" value="" name="noteTitle">
            <label for="noteBody">Write Your Note</label>
            <textarea rows="10" cols="50" placeholder="Write a Note" name="noteBody"></textarea>
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>


    <div class="row">
      <div class="col-sm-6">
        <h3>Notes List Test</h3>
        <% for(var i=0; i<notes.length; i++) {%>
          <li><span><%= notes[i].title %></span></li>
          <% } %>
      </div>
        <div class="col-sm-6">
          <h3>Notes</h3>
          <ul class="messages">
          <% for(var i=0; i<notes.length; i++) {%>
            <li class="message">
              <strong><span><%= notes[i].title %></span></strong>
              <span><%= notes[i].notebody %></span>
              <span><i class="fa fa-trash-alt" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
        </div>
      </div>
